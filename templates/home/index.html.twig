										</div>
										</br>
										<div class="inline">
											<div class="titre">Master ID acces :</div>
											{{item.masterIdAcces}}
										</div>
										</br>

										<div class="inline">
											<div class="titre">Libelle :</div>
											{{item.libelle}}
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endif %}

					{% set counter = counter + 1 %}
				{% endfor %}


			</tbody>
		</table>
		{# FORM LIGNE #}
